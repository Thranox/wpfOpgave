<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Button Grid.Row="0" Grid.Column="0" FontFamily="Times New Roman" FontSize="48">My first button</Button>

        <Button Grid.Row="0" Grid.Column="1" Margin="10,10,10,10" FontFamily="Times New Roman" FontSize="48" Click="Button_Click">My Second Button</Button>

        <Button Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" FontFamily="Times New Roman" FontSize="24">My third button</Button>

        <Button Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" FontFamily="Times New Roman" FontSize="24">My button for good luck</Button>
    </Grid>
</Window>
