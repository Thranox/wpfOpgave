<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel Margin="0,1,-0.4,-1">
        <Button x:Name="left" DockPanel.Dock="Left" Click="Button_Click">Left</Button>
        <Button x:Name="top" DockPanel.Dock="Top" Click="top_Click">Top</Button>
        <Button x:Name="right" DockPanel.Dock="Right" Click="right_Click">Right</Button>
        <Button x:Name="bottom" DockPanel.Dock="Bottom" Click="bottom_Click">Bottom</Button>
        <TextBox x:Name="textBox1" Text=""/>
    </DockPanel>
</Window>
